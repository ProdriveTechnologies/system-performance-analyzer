/** Classification:
System resource usage values: 1

*/
{
    "name": "Jetson AGX Xavier",
    "sensors": [
        {
            "name": "cpu",
            "type": "ARRAY",
            "size": 8,
            "data": [
                {
                    "name": "Current Frequency",
                    "class": 1,
                    "type": "DIRECT",
                    "path": "/sys/devices/system/cpu/cpu$INDEX$/cpufreq/cpuinfo_cur_freq"
                },
                {
                    "name": "Current Frequency",
                    "class": 1,
                    "type": "DIRECT",
                    "path": "/sys/devices/system/cpu/cpu$INDEX$/cpufreq/cpuinfo_cur_freq"
                },
                {
                    "name": "Min Frequency",
                    "class": 1,
                    "type": "DIRECT",
                    "path": "/sys/devices/system/cpu/cpu$INDEX$/cpufreq/cpuinfo_min_freq"
                },
                {
                    "name": "Max Frequency",
                    "class": 1,
                    "type": "DIRECT",
                    "path": "/sys/devices/system/cpu/cpu$INDEX$/cpufreq/cpuinfo_max_freq"
                },
                {
                    "name": "CPU utilization per core",
                    "class": 1,
                    "type": "PROC",
                    "value": "all_excl_idle",
                    "compared_to": "all",
                    "path": "cpu$INDEX$"
                },
                {
                    "name": "CPU IO time",
                    "class": 1,
                    "type": "PROC",
                    "value": "iowait",
                    "compared_to": "all",
                    "path": "cpu$INDEX$"
                }
            ]
        },
        {
            "name": "CPU utilization",
            "class": 1,
            "type": "PROC",
            "compared_to": "all",
            "value": "all_excl_idle",
            "path": "cpu"
        },
        {
            "name": "CPU IO time",
            "class": 1,
            "type": "PROC",
            "compared_to": "all",
            "value": "iowait",
            "path": "cpu"
        },
        {
            "name": "Memory usage",
            "class": 1,
            "type": "PROCMEM",
            "value": "MemFree"
        },
        {
            "name": "Memory utilization",
            "class": 1,
            "type": "PROCMEM",
            "value": "MemFree",
            "compared_to": "MemTotal"
        },
